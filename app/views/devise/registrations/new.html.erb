        <ul class="nav user-menu pull-right">
          <% if user_signed_in?  %>   <a href="/logout" class="btn btn-primary">Logout</a>   <% else %>
              <li><a href="/register" class="btn btn-primary signup">Inscrição</a></li>
              <li class="dropdown">
                <a href="login.htm" class="btn btn-primary dropdown-toggle login" id="login-drop" data-toggle="dropdown">Entrar</a>
                <div class="dropdown-menu" role="menu" aria-labelledby="login-drop">

                  <%= render 'shared/login' %>
                </div>
              </li>
          <% end %>
        </ul>

        <!--everything within this div is collapsed on mobile-->
        <div class="nav-collapse collapse">

          <!--main navigation-->
          <ul class="nav" id="main-menu">
            <li class="top"><a href="/#top"><i class="icon-home hidden-phone"></i><span class="visible-phone">Início</span></a></li>
            <li><a href="/#como" class="menu-item">Como Funciona?</a></li>
            <li><a href="/#preco" class="menu-item">Quanto Custa?</a></li>
            <li><a href="#quem" class="menu-item">Quem pode aderir?</a></li>
            </li>
            <% if user_signed_in?  %>
                <li class="menu-item"><a href="#" class="dropdown-toggle" id="pages-drop" data-toggle="dropdown">Formulário</a></li>
                <li class="menu-item"><a href="#" class="dropdown-toggle" id="pages-drop" data-toggle="dropdown">Perfil de <% current_user.email %></a></li>

          <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
</div>
<div id="content">
  <div class="container">
    <div class="block">
      <div class="span12">
        <div class="well">
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div><%= f.label :email %><br />
              <%= f.email_field :email, :autofocus => true %></div>

              <div><%= f.label :password %><br />
              <%= f.password_field :password %></div>

              <div><%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation %></div>

              <div><%= f.label :tipo %><br />
                <%= f.check_box :tipo %></div>

              <div><%= f.label :nome %><br />
                <%= f.text_field :nome %></div>

              <div><%= f.label :apelido %><br />
                <%= f.text_field :apelido %></div>

              <div><%= f.label :morada %><br />
                <%= f.text_field :morada %></div>

              <div><%= f.label :localidade %><br />
                <%= f.text_field :localidade %></div>

              <div><%= f.label :codpostal %><br />
                <%= f.text_field :codpostal %></div>

              <div>
                <select>
                    <option value=""></option>
                    <% Country.all do |c| %>
                        <option value="<%= c.country %>"><%= c.country %></option>
                    <%end %>
                </select>
              </div>

              <div><%= f.label :tipocontacto %><br />
                <%= f.text_field :tipocontacto %></div>

              <div><%= f.label :telefone %><br />
                <%= f.text_field :telefone %></div>

              <div><%= f.label :telemovel %><br />
                <%= f.text_field :telemovel %></div>

              <div><%= f.label :mail %><br />
                <%= f.text_field :mail %></div>

              <div><%= f.label :nif %><br />
                <%= f.text_field :nif %></div>

              <div><%= f.submit "Sign up" %></div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
