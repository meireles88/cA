<body class="page page-index">
<div id="navigation" class="wrapper">

  <div class="navbar  navbar-static-top">

    <!--Header & Branding region-->
    <div class="header">
      <div class="header-inner container">
        <div class="row-fluid">
          <div class="span8">
            <!--branding/logo-->
            <a class="brand" href="/" title="Home" style="margin-top: 0px;">
              <img src="assets/logo.png"/>
            </a>
            <div class="slogan" id="top">Cartão Amigável</div>
          </div>

          <!--header rightside-->
          <div class="span4">

            <!--social media icons-->
            <div class="social-media pull-right">
              <!--@todo: replace with company social media details-->
              <a href="http://www.twitter.com"><i class="icon-twitter"></i></a>
              <a href="http://www.facebook.com"><i class="icon-facebook"></i></a>
              <a href="http://www.linkedin.com"><i class="icon-linkedin"></i></a>
              <a href="http://plus.google.com"><i class="icon-google-plus"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="navbar-inner">

        <!--mobile collapse menu button-->
        <a class="btn btn-navbar pull-left" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <!--user menu-->
        <ul class="nav user-menu pull-right">
          <% if user_signed_in?  %>   <a href="/logout" class="btn btn-primary">Logout</a>   <% else %>
              <li><a href="/register" class="btn btn-primary signup">Inscrição</a></li>
              <li class="dropdown">
                <a href="login.htm" class="btn btn-primary dropdown-toggle login" id="login-drop" data-toggle="dropdown">Entrar</a>
                <div class="dropdown-menu" role="menu" aria-labelledby="login-drop">

                  <%= render 'shared/login' %>
                </div>
              </li>
          <% end %>
        </ul>

        <!--everything within this div is collapsed on mobile-->
        <div class="nav-collapse collapse">

          <!--main navigation-->
          <ul class="nav" id="main-menu">
            <li class="top"><a href="#top"><i class="icon-home hidden-phone"></i><span class="visible-phone">Início</span></a></li>
            <li><a href="#como" class="menu-item">Como?</a></li>
            <li><a href="#preco" class="menu-item">Quanto?</a></li>
            <li><a href="#quem" class="menu-item">Quem?</a></li>
            </li>
            <% if user_signed_in?  %>
                <li class="menu-item"><a href="/formulario" class="dropdown-toggle" id="pages-drop" data-toggle="dropdown">Formulário</a></li>
                <li class="menu-item"><a href="#" class="dropdown-toggle" id="pages-drop" data-toggle="dropdown">Perfil de <%= @user.nome %></a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
</div>

<div id="content">
  <div class="container">
    <div class="block">
      <div class="span12">
        <div class="well">
          <b>NOME:</b> <%= @user.nome %>
          <%= @user.apelido %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- FOOTER -->
<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="span3 col">
        <div class="block contact-block" id="sobre">
          <!--@todo: replace with company contact details-->
          <h3>Contacte-nos</h3>
          <address>
            <p><abbr title="Phone"><i class="icon-phone"></i></abbr> 91</p>
            <p><abbr title="Email"><i class="icon-envelope"></i></abbr> info@cartaoamigavel.pt</p>
            <p><abbr title="Address"><i class="icon-home"></i></abbr> Rua do Souto nº1</p>
          </address>
        </div>
      </div>

      <div class="span6 col">
        <div class="block">
          <h3>Sobre nós</h3>
          <p></p>
        </div>
      </div>

    </div>

    <div class="row-fluid">
      <div id="toplink"><a href="#top" class="top-link" title="Back to top">Back To Top <i class="icon-chevron-up"></i></a></div>
      <!--@todo: replace with company copyright details-->
      <div class="subfooter">
        <div class="span6">
          <p>Template por <a href="#">Mário Meireles</a> | Copyright 2013 &copy; Mário Meireles</p>
        </div>
      </div>
    </div>        </div>
</footer>
